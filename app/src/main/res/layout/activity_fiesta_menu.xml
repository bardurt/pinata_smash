<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fiesta_bg"
    android:orientation="vertical"
    tools:context=".FiestaMenuActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="120dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="35dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/fiesta_back_button"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="261dp"
                android:layout_height="97dp"
                android:background="@drawable/fiesta_logo"/>

        </LinearLayout>

        <ImageView
            android:layout_width="186dp"
            android:layout_height="124dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/toyota_raw"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="164dp"
            android:layout_height="54dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_fiesta_play"/>

    </LinearLayout>

    <fragment
        android:id="@+id/menu_fragment"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:name="com.zygne.bitelgame.FiestaMenuFragment"/>

    </RelativeLayout>

</LinearLayout>